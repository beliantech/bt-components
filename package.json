{
  "name": "@beliantech/bt-components",
  "version": "0.13.2",
  "description": "UI components for Belian Tech products",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production webpack --config webpack.prod.js && npm run build-css",
    "build-storybook": "build-storybook -c .storybook -o .out",
    "deploy-storybook": "npm run build-storybook && firebase deploy",
    "publish-npm": "npm run build && wct --npm && npm publish dist --access public",
    "build-css": "npx tailwindcss build src/bt-utils.css -o dist/bt-utils-full.css && npm run purge-css",
    "purge-css": "npx purgecss --css dist/bt-utils-full.css --content src/**/*.js,src/components/**/*.js -o dist/bt-utils.css && rm dist/bt-utils-full.css",
    "test": "npm run build && wct --npm",
    "test:debug": "npm run build && wct --npm -p --config-file wct.conf.local.json",
    "storybook": "start-storybook -p 6006",
    "start": "npm run storybook"
  },
  "homepage": "https://github.com/beliantech/bt-components",
  "repository": {
    "type": "git",
    "url": "https://github.com/beliantech/bt-components.git"
  },
  "author": "Jonathan Lin",
  "license": "MIT",
  "dependencies": {
    "@material/mwc-icon": "^0.15.0",
    "@material/mwc-slider": "^0.15.0",
    "codeflask": "^1.4.1",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0",
    "lodash": "^4.17.15",
    "pikaday": "^1.8.0",
    "trix": "^1.2.3",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@beliantech/iron-test-helpers": "^3.1.0",
    "@storybook/cli": "^5.3.18",
    "@storybook/html": "^5.3.18",
    "autoprefixer": "^9.7.6",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "html-webpack-plugin": "^4.3.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "purgecss": "^2.3.0",
    "tailwindcss": "^1.4.4",
    "terser-webpack-plugin": "^3.0.1",
    "wct-browser-legacy": "^1.0.2",
    "web-component-tester": "^6.9.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  }
}
